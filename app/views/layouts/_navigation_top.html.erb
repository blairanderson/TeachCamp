<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "TeachCamp", root_path, class: "brand" %>
      <ul class="nav">
        <% if teacher_signed_in? %>
            <li class="divider-vertical"></li>
            <li><%= link_to "Schools", schools_path %></li>
            <li><%= link_to "Classrooms", classrooms_path %></li>
            <li><%= link_to "Messages", messages_path %></li>
            <li><%= link_to "Students", students_path %></li>
            <li class="dropdown" id="menu1">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#menu1">
                Options
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to current_teacher.email, '#' %></li>
                <li><%= link_to 'Edit'.html_safe, edit_teacher_registration_path %></li>
                <li class="divider"></li>
                <li><%= link_to "Logout", destroy_teacher_session_path, method: :delete %></li>
              </ul>
            </li>
            </ul>
        <% else %>
            <li><%= link_to "Create New Account!", new_teacher_registration_path %></li>
              <%= form_tag "teachers/login", class: "navbar-form pull-right" %>
              <input name="teacher[email]" type="email" placeholder="email" class="span2">
              <input name="teacher[password]" type="password" placeholder="password" class="span2">
              <button class="btn">
                Sign in
              </button>
            </form>
        <% end %>
        </div>
  </div>
</div>