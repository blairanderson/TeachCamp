<h1><%= @classroom.name %></h1>
<%= link_to 'Edit Classroom', edit_classroom_path(@classroom) %>
<h3>
  <b>Teacher:</b>
  <% @classroom.teachers.each do |teacher| %>
      <%= teacher.email %> <br>
  <% end %>
</h3>
<h5>Running Date: <%= @classroom.running_date %></h5>

<span>
<h4>Class Description: <br>
  <%= @classroom.description %> </h4>
</span>

<h3>Lessons:<%= link_to '(new)', new_classroom_lesson_path(@classroom) %></h3>
<ol>
  <%  @classroom.lessons.each do |lesson| %>
      <li>
        <b>
          <%= link_to lesson.name, classroom_lesson_path(@classroom.id, lesson.id) %>
        </b>
        <i>
          <%= lesson.description %>
        </i>
      </li>
  <% end %>
</ol>

<span id="messages">
  <h5>FAQ: <i>(if messages exist for this class, they would be here.)</i></h5>
  <ul>
    <li><%= link_to "new message", new_message_path(classroom_id: @classroom.id) %> </li>
    <% @messages.reverse.each do |question| %>
        <li>
          <i><small><%= link_to "permalink", message_path(question.id), target: "_blank" %></small></i>
          <b><%= question.message %></b>
          <%= question.created_at %>
        </li>
    <% end %>
  </ul>

</span>

